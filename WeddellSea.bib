@article{Ellingsen2020,
  title = {The Rise of a Marine Generalist Predator and the Fall of Beta Diversity},
  author = {Ellingsen, Kari E. and Yoccoz, Nigel G. and Tveraa, Torkild and Frank, Kenneth T. and Johannesen, Edda and Anderson, Marti J. and Dolgov, Andrey V. and Shackell, Nancy L.},
