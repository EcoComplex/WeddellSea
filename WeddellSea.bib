  keywords = {★,accepted 4 november 2011,alternative states,bouteloua eriopoda,corresponding editor,desert grassland,krill,leading indicators,nyctiphanes simplex,pachythyone rubra,pan,penguins,published 9 december 2011,pygoscelis,received 27 july 2011,regime shifts,revised 2 november 2011,sea cucumbers,thresholds,y},
